<div class="container">
  <% if @request.errors.any? %>
      <div id="error_explanation">
      <div class="alert alert-error">
        The form contains <%= pluralize(@request.errors.count, "error") %>.
      </div>
      <ul>
      <% @request.errors.full_messages.each do |msg| %>
          <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <div class="row">


    <h1>What would you like to borrow?</h1></br>
  

    <div class="col-md-6">
      
      <%= form_for @request do |f| %>

        <div class="form-group">
          <%= f.radio_button(:item, "upshell") %>
          <%= f.label(:item_upshell, "Snow/waterproof shell (upper)") %>
          </br>
          <%= f.radio_button(:item, "loshell") %>
          <%= f.label(:item_loshell, "Snow/waterproof shell (lower)") %>
          </br>
          <%= f.radio_button(:item, "upmid") %>
          <%= f.label(:item_upmid, "Insular mid-layer (upper)") %>
          </br>
          <%= f.radio_button(:item, "lomid") %>
          <%= f.label(:item_lomid, "Insular mid-layer (lower)") %>
          </br>
          <%= f.radio_button(:item, "helmet") %>
          <%= f.label(:item_helmet, "Snow sports helmet") %>
          </br>
          <%= f.radio_button(:item, "goggles") %>
          <%= f.label(:item_goggles, "Snow sports goggles") %>
          </br>
          <%= f.radio_button(:item, "tent") %>
          <%= f.label(:item_tent, "Camping tent") %>
          </br>
          <%= f.radio_button(:item, "slpbag") %>
          <%= f.label(:item_slpbag, "Sleeping bag") %>
          </br>
          <%= f.radio_button(:item, "slppad") %>
          <%= f.label(:item_slppad, "Sleeping pad") %>
          </br>
          <%= f.radio_button(:item, "backpack") %>
          <%= f.label(:item_backpack, "Hiking backpack") %>
          </br>
          <%= f.radio_button(:item, "filter") %>
          <%= f.label(:item_filter, "Hiking portable water filter") %>
          </br>
          <%= f.radio_button(:item, "Hiking hydration bladder") %>
          <%= f.label(:item, "Hiking hydration bladder") %>
          </br>
          <%= f.radio_button(:item, "Headlamp") %>
          <%= f.label(:item, "Headlamp") %>
        </div>
      </div>

        <!--<div class="form-group">-->
        <!--  <%#= f.label :item %>-->
        <!--  <%#= f.text_area :item, class: "form-control", placeholder: "What do you need to borrow (one item per request)?", col: 3 %>-->
        <!--</div>-->
      <div class="col-md-6">

        <div class="form-group">
          <%= f.label :detail, "Details (optional)" %>
          <%= f.text_area :detail, class: "form-control", placeholder: "Give us more information, e.g., what you need the item for, product specifications, timing of need, etc." %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "To whom are we speaking?" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control", placeholder: "How do we reach you?" %>
        </div>

        <%= f.submit "Go!", class: "btn btn-primary btn-large btn-block" %>
      <% end %>
    </div>
    </div>
  </div>
</div>
