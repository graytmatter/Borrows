    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

  </script>

  <!-- Facebook Conversion Code for Signup -->
  <script>(function() {
  var _fbq = window._fbq || (window._fbq = []);
  if (!_fbq.loaded) {
  var fbds = document.createElement('script');
  fbds.async = true;
  fbds.src = '//connect.facebook.net/en_US/fbds.js';
  var s = document.getElementsByTagName('script')[0];
  s.parentNode.insertBefore(fbds, s);
  _fbq.loaded = true;
  }
  })();
  window._fbq = window._fbq || [];
  window._fbq.push(['track', '6020726765986', {'value':'0.01','currency':'USD'}]);
  </script>
  <noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?ev=6020726765986&amp;cd[value]=0.01&amp;cd[currency]=USD&amp;noscript=1" /></noscript>

  
</head>
<body>

  <div class="col-xs-8 col-xs-offset-2" style="z-index:100;">
    <div class="horiz", style="padding-top:4%">
      <%= link_to(image_tag("Logo.png", title: "Project Borrow", alt: "Project Borrow", width: "40%"), root_path) %>
      <h1 style="font-size:130%; font-style: italic;">A fun and easy way to share stuff with the hundreds of Facebook friends you already have!</h1>
      <hr>
    </div>
  </div>

  <% if current_page?(controller: "staticpages", action: "home") %>

    <%= yield %> 

  <% else %>

    <div class="col-xs-8 col-xs-offset-2">

    <%= yield %>

  <% end %>
     

    <div class="col-xs-12 horiz" style="padding-top: 1%; padding-bottom:1%;">
          <%#= link_to 'Learn more' %>
          <%= link_to 'Terms of service', terms_path, { style: "padding-right:2%; padding-left:2%; color:#428bca", target: "_blank" } %>
          <%= link_to 'Privacy policy', policy_path, { style: "padding-right:2%; padding-left:2%; color:#428bca", target: "_blank" } %>
          <%= mail_to 'james@projectborrow.com', 'Contact us', { style: "padding-right:2%; padding-left:2%; color:#428bca"}%>
          <% if current_page?(controller: "staticpages", action: "home") %>
            <%= link_to 'Login to use Project Borrow', original_path, { id: "original", style: "padding-right:2%; padding-left:2%; color:#428bca"} %>
          <% end %>
      </div>
    </div>

  <% unless current_page?(controller: "staticpages", action: "home") %>
    </div>
  <% end %>

