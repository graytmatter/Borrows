
<% if @signup_parent.errors.any? %>
  <div class="alert alert-danger">
    <p>Please correct the following error(s):</p>
    <ul>
    <% @signup_parent.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="col-xs-12 box">  
  <%= form_tag inventories_path method: :post do %>
    <% Categorylist.all.select { |c| c.itemlists.pluck("inventory_list").include? true }.each do |n| %>
        <div class="col-xs-4">
          <div class="form-group" style="font-size:75%">
            <h5> <%= n.name %> </h5>
              <% n.itemlists.each do |i| %>
                  <%= number_field_tag "transaction[][#{i}]", :quantity, min: 0, value: @transactionparams ? @transactionparams[i] : 0, class: "shrink_num_field" %>
                  <%= label_tag i.name %>
                </br>
              <% end %>
          </div>
        </div>  
      <% end %>

    <div class="form-group col-xs-12">
      <%= submit_tag "Go!", class: "btn btn-warning btn-large btn-block", data: { disable_with: 'Upload in progress, take a breather =)'} %>
    </div>
  
  <% end %>
</div>