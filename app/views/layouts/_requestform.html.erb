  
  <% if @requestrecord.errors.any? %>
    <div class="alert alert-danger">
      <p>Please correct the following error(s):</p>
      <ul>
        <% @requestrecord.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render "layouts/flash" %>

  <div class="col-xs-12 box">   
    <%= form_for @requestrecord, :url => { action: 'create' }, :html => {:autocomplete => "off"}  do |f| %>
      <% @itemlist.first(6).each do |category, list| %>
        <div class="col-xs-4">
          <div class="form-group" style="font-size:80%" >
            <h5> <%= category %> </h5>
            <% list.first(8).each do |thing| %>
              <%= number_field_tag "transaction[][#{thing}]", :quantity, min: 0, value: @transactionparams ? @transactionparams[thing] : 0, class: "shrink_num_field" %>
              <%= label_tag thing, thing %>
              </br>
            <% end %>
          </div>
        </div>  
      <% end %>

      <div class="form-group col-xs-12">
        <%= f.label :detail, "Personal message to lender (optional)" %>
        <%= f.text_area :detail, class: "form-control", placeholder: "Tell the lender your plans or any detailed product specifications you need for the item(s) above" %>
      </div>

      <div class="form-group col-xs-12">
        <%= f.label "Pick up:" %>
        <%= date_select(:request, :pickupdate, default: @requestrecord.pickupdate, start_year: Date.today.year, end_year: Date.today.year + 1) %>
        <%= f.label "Return:" %>
        <%= date_select(:request, :returndate, default: @requestrecord.returndate, start_year: Date.today.year, end_year: Date.today.year + 1) %>
      </div>

      <div class="form-group col-xs-12">
        <%= f.submit "Go!", class: "btn btn-primary btn-large btn-block", data: { confirm: 'Please review everything before submitting', disable_with: 'Looking for lenders now, take a breather =)' }  %>
      </div>

    <% end %>
  </div>